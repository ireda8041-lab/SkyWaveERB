# Sky Wave ERP - Environment Configuration Example
# انسخ هذا الملف إلى .env وقم بتعديل القيم

# ==================== MongoDB Configuration (Optional) ====================
# إعدادات MongoDB - اختيارية للمزامنة السحابية
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGO_DB_NAME=skywave_erp

# للتوافق مع إصدارات/إعدادات قديمة (اختياري)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DB_NAME=skywave_erp

# ==================== Application Settings ====================
# وضع التطوير (development أو production)
APP_ENV=production

# مستوى السجلات (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ==================== Security ====================
# مفتاح التشفير (اتركه فارغاً لتوليد مفتاح تلقائي)
SECRET_KEY=

# ==================== Auto Update ====================
# رابط التحديثات التلقائية
UPDATE_URL=https://api.github.com/repos/ireda8041-lab/SkyWaveERB/releases/latest

# ==================== Backup ====================
# مسار النسخ الاحتياطي
BACKUP_PATH=./backups

# عدد النسخ الاحتياطية المحفوظة
BACKUP_RETENTION=7
